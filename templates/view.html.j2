{% extends 'base.html.j2' %}
{% import 'createButton.html.j2' as button %}

{% block content %}
   <h2> {{album.title}}</h2>

   <p> This is your album </p>

   <form method="post" action="/edit/delete/{{album.key.urlsafe()}}">
      <button type="submit" > Delete </button>
   </form>

   {{ button.button("&#9881;", "save", "Save") }}

  
   	{% if album.html %}
      <img src={{album.html}}/>

   	{% else %}
   		<p> No image uploaded </p>
	{% endif %}

{% endblock %}
